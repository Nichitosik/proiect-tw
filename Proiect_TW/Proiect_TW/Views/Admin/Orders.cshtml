@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
    ViewBag.Title = "Orders";
    var orders = ViewBag.Orders;
    var NewOrders = ViewBag.NewOrders;

}
<!-- ============================================================== -->
<!-- Start Page Content here -->
<!-- ============================================================== -->

<div class="wrapper">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Admin</a></li>
                            <li><i class="fas fa-chevron-right icon-margin"></i></li>
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Orders</a></li>
                        </ol>
                    </div>
                    <h4 class="page-title">Orders</h4>
                </div>
            </div>
        </div>
        <!-- end page title -->

        <div class="row">
            <div class="col-12">
                <div class="card-box">

                    <div class="text-center mb-2">
                        <div class="row">
                            <div class="col-md-6 col-xl-4">
                                <div class="card-box border">
                                    <h3>@orders.Count</h3>
                                    <p class="text-uppercase mb-1 font-13 font-weight-medium">Total Orders</p>
                                </div>
                            </div>
                            <div class="col-md-6 col-xl-4">
                                <div class="card-box border">
                                    <h3 class="text-warning">Orders</h3>
                                </div>
                            </div>
                            <div class="col-md-6 col-xl-4">
                                <div class="card-box border">
                                    <h3 class="text-success">@NewOrders</h3>
                                    <p class="text-uppercase mb-1 font-13 font-weight-medium">New Orders</p>
                                </div>
                            </div>
                        </div>
                    </div>


                    <table class="table table-hover m-0 table-centered dt-responsive nowrap w-100" cellspacing="0" id="tickets-table">
                        <thead class="bg-light">
                            <tr>
                                <th class="font-weight-medium">ID</th>
                                <th class="font-weight-medium">Name & Username</th>
                                <th class="font-weight-medium">Email</th>
                                <th class="font-weight-medium">Phone Number</th>
                                <th class="font-weight-medium">City</th>
                                <th class="font-weight-medium">Payment Method</th>
                                <th class="font-weight-medium">TotalPrice</th>
                                <th class="font-weight-medium">PublishTime</th>
                                <th class="font-weight-medium">Products Count</th>
                                <th class="font-weight-medium">Action</th>
                            </tr>
                        </thead>

                        <tbody class="font-14">
                            @foreach(var order in orders)
                            {
                                <tr>
                                    <td><b>#@order.Id</b></td>
                                    <td>
                                        <a class="text-dark">
                                            <i class="fas fa-user custom-color"></i>
                                            <span class="ml-2">@order.NameSurname</span>
                                        </a>
                                    </td>

                                    <td>
                                        @order.Email
                                    </td>

                                    <td>
                                        @order.PhoneNumber
                                    </td>

                                    <td>
                                        @order.City
                                    </td>

                                    <td>
                                        @order.PaymentMethod
                                    </td>
                                    <td>
                                        @order.TotalPrice
                                    </td>
                                    <td>
                                        @order.PublishTime
                                    </td>

                                    <td>
                                        <div class="btn-group dropdown">
                                            <a href="javascript: void(0);" class="dropdown-toggle arrow-none btn btn-light btn-sm" data-toggle="dropdown" aria-expanded="false"><i class="fas fa-edit"></i></a>
                                            <div class="dropdown-menu dropdown-menu-right">
                                                <a class="dropdown-item" href="#"><i class="fas fa-edit"></i> Edit User</a>
                                                <a class="dropdown-item" href="@Url.Action("Orders", "Admin" , new { button = @order.Id })"><i class="fas fa-trash"></i> Delete</a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div><!-- end col -->
        </div>
        <!-- end row -->

    </div> <!-- end container -->
</div>
<!-- end wrapper -->
