@using System.Web.Optimization;
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
    ViewBag.Title = "AddProduct";
}
@model Proiect_TW.Web.Models.Users.AddProduct


<!-- ============================================================== -->
<!-- Start Page Content here -->
<!-- ============================================================== -->

<div class="wrapper">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Admin</a></li>
                            <li><i class="fas fa-chevron-right icon-margin"></i></li>
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Add Product</a></li>
                        </ol>
                    </div>
                    <h4 class="page-title">Add Product</h4>
                </div>
            </div>
        </div>
        <!-- end page title -->

        <div class="row">
            <div class="col-12">
                <div class="card-box">
                    <h4 class="header-title">Input Types</h4>
                    <p class="sub-header">
                        <code>JPEG</code>, <code>PNG</code>
                    </p>

                    <div class="row">
                        <div class="col-12">
                            <div class="p-2">
                                @Html.ValidationSummary(true)
                                @using (Html.BeginForm("AddProduct", "Admin", FormMethod.Post, new { enctype = "multipart/form-data row" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="form-group row">
                                        @Html.LabelFor(m => m.Title, new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.Title, new
                                   {
                                       placeholder = "Add title...",
                                       title = "Please enter a title",
                                       value = "",
                                       name = "title",
                                       @class = "form-control"
                                   })
                                    </div>
                                    <div class="form-group row">
                                        @Html.LabelFor(m => m.Description, new { @class = "control-label" })
                                        @Html.TextAreaFor(m => m.Description, new
                                               {
                                                   placeholder = "Add description...",
                                                   title = "Please enter a description",
                                                   @class = "form-control",
                                                   rows = "6"
                                               })
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Admin/Username</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" readonly="" value="admin123">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Admin/Email</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" disabled="" value="gheorghe.cristianisa.utm.md">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        @Html.Label("Product Type", new { @class = "col-sm-2 col-form-label" })
                                        <div class="col-sm-10">
                                            @Html.DropDownListFor(m => m.Type, new SelectList(new[]
                                            {
                                                "Men's",
                                                "Women's",
                                                "Kid's",
                                                "Accessories"
                                            }), new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        @Html.Label("Product Style", new { @class = "col-sm-2 col-form-label" })
                                        <div class="col-sm-10">
                                            @Html.DropDownListFor(m => m.Style, new SelectList(new[]
                                            {
                                                "Casual Wear",
                                                "Streetwear",
                                                "Classic",
                                                "Minimalist"
                                            }), new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        @Html.Label("Product Sizes", new { @class = "col-sm-2 col-form-label" })
                                        <div class="col-sm-10">
                                            @Html.ListBoxFor(m => m.Sizes, new MultiSelectList(new[]
                                            {
                                                "XS",
                                                "S",
                                                "M",
                                                "L",
                                                "XL",
                                                "XXL"
                                            }), new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="Files">Select Files</label>
                                        <input type="file" name="Files" multiple />
                                    </div>

                                    <div class="form-group row">
                                        <button type="submit" href="@Url.Action("Index", "Home")" class="btn btn-primary">Submit</button>
                                        </div>
                                  }

                                    </div>
                                </div>

                    </div>
                    <!-- end row -->

                </div> <!-- end card-box -->
            </div><!-- end col -->
        </div>
        <!-- end row -->

    </div> <!-- end container -->
</div>
