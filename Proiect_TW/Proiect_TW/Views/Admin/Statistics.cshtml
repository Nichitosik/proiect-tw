
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
    ViewBag.Title = "Statistics";
    var statistics = ViewBag.Statistics;

}

<!-- ============================================================== -->
<!-- Start Page Content here -->
<!-- ============================================================== -->
<div class="wrapper">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Admin</a></li>
                            <li><i class="fas fa-chevron-right icon-margin"></i></li>
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Statistics</a></li>
                        </ol>
                    </div>
                    <h4 class="page-title">Statistics</h4>
                </div>
            </div>
        </div>
        <!-- end page title -->

        <div class="row">
            <div class="col-md-6 col-xl-3">
                <div class="card-box">
                    <i class="fa fa-info-circle text-muted float-right" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="More Info"></i>
                    <h4 class="mt-0 font-16">Income</h4>
                    <h2 class="text-primary my-3 text-center">$<span data-plugin="counterup">@statistics.IncomeToday</span></h2>
                    <p class="text-muted mb-0">Total income: @statistics.TotalIncome <span class="float-right"><i class="fa fa-caret-up text-success mr-1"></i>@(statistics.IncomeToday / statistics.TotalIncome * 100) %</span></p>
                </div>
            </div>

            <div class="col-md-6 col-xl-3">
                <div class="card-box">
                    <i class="fa fa-info-circle text-muted float-right" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="More Info"></i>
                    <h4 class="mt-0 font-16">Sold Items</h4>
                    <h2 class="text-primary my-3 text-center"><span data-plugin="counterup">@statistics.SoldItemsToday</span></h2>
                    <p class="text-muted mb-0">Total sales: @statistics.TotalSoldItems <span class="float-right"><i class="fa fa-caret-down text-danger mr-1"></i>@(statistics.SoldItemsToday / statistics.TotalSoldItems * 100) %</span></p>
                </div>
            </div>

            <div class="col-md-6 col-xl-3">
                <div class="card-box">
                    <i class="fa fa-info-circle text-muted float-right" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="More Info"></i>
                    <h4 class="mt-0 font-16">Average Price</h4>
                    <h2 class="text-primary my-3 text-center"><span data-plugin="counterup">@statistics.AveragePriceToday</span></h2>
                    <p class="text-muted mb-0">Average price: @statistics.AveragePrice <span class="float-right"><i class="fa fa-caret-up text-success mr-1"></i>@(statistics.AveragePriceToday / statistics.AveragePrice * 100) %</span></p>
                </div>
            </div>

            <div class="col-md-6 col-xl-3">
                <div class="card-box">
                    <i class="fa fa-info-circle text-muted float-right" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="More Info"></i>
                    <h4 class="mt-0 font-16">New Users</h4>
                    <h2 class="text-primary my-3 text-center">$<span data-plugin="counterup">@statistics.NewUsersToday</span></h2>
                    <p class="text-muted mb-0">Total users: @statistics.TotalUsers <span class="float-right"><i class="fa fa-caret-up text-success mr-1"></i>@(statistics.NewUsersToday / statistics.TotalUsers * 100) %</span></p>
                </div>
            </div>
        </div>



        <div class="row align-items-stretch">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-body">
                     
                        <h4 class="header-title">Total Sales Income</h4>

                        <div class="row mt-4 text-center">
                            <div class="col-4">
                                <p class="text-muted font-15 mb-1 text-truncate">Today</p>
                                <h4><i class="fas fa-arrow-alt-circle-up"></i> $7.8k</h4>
                            </div>
                            <div class="col-4">
                                <p class="text-muted font-15 mb-1 text-truncate">Last week</p>
                                <h4><i class="fas fa-arrow-alt-circle-up"></i> $1.4k</h4>
                            </div>
                            <div class="col-4">
                                <p class="text-muted font-15 mb-1 text-truncate">Last Month</p>
                                <h4><i class="fas fa-arrow-alt-circle-up"></i> $15k</h4>
                            </div>
                        </div>

                        <div class="mt-3" dir="ltr">
                            <div id="apex-area" class="apex-charts"></div>
                        </div>
                    </div> <!-- end card-body-->
                </div> <!-- end card-->
            </div> <!-- end col -->

            <div class="col-lg-4">
                <div class="card">
                    <div class="card-body">
                        <h4 class="header-title">Sold categories</h4>
                        <div class="row mt-4 text-center">
                            <div class="col-4">
                                <p class="text-muted font-15 mb-1 text-truncate">Men's</p>
                                <h4><i class="fas fa-arrow-alt-circle-up"></i> <span id="Mens">$3.8k</span></h4>
                            </div>
                            <div class="col-4">
                                <p class="text-muted font-15 mb-1 text-truncate">Women's</p>
                                <h4><i class="fas fa-arrow-alt-circle-up"></i> <span id="Womens">$1.1k</span></h4>
                            </div>
                            <div class="col-4">
                                <p class="text-muted font-15 mb-1 text-truncate">Kid's</p>
                                <h4><i class="fas fa-arrow-alt-circle-up"></i> <span id="Kids">$55k</span></h4>
                            </div>
                        </div>
                        <div class="mt-2" dir="ltr">
                            <canvas id="myChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- end row -->

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="header-title mb-0">Top 10 Selling Products</h4>

                        <div id="cardCollpase5" class="collapse pt-3 show">
                            <div class="table-responsive">
                                <table class="table table-hover table-centered mb-0">
                                    <thead>
                                        <tr>
                                            <th>Product Name</th>
                                            <th>Price</th>
                                            <th>Quantity</th>
                                            <th>Amount</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < 15; i++)
                                        {
                                            <tr>
                                                <td>ASOS Ridley High Waist</td>
                                                <td>$79.49</td>
                                                <td>82</td>
                                                <td>$6,518.1</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div> <!-- end table responsive-->
                        </div> <!-- collapsed end -->
                    </div> <!-- end card-body -->
                </div> <!-- end card-->
            </div> <!-- end col -->
        </div>
        <!-- end row -->

    </div> <!-- end container -->
</div>
<!-- end wrapper -->
