                        </div>
                        <div class="row">
                            <div class="col-lg-10 profile-edit-input">
                                @Html.TextBoxFor(m => m.Username, new
                            {
                                placeholder = $"{user.Username}",
                                title = "Please enter your username",
                                value = "",
                                name = "username",
                                @class = "form-control"
                            })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-10 profile-edit-input">
                                @Html.TextBoxFor(m => m.Age, new
                            {
                                placeholder = $"{user.Age}",
                                title = "Please enter your age",
                                value = "",
                                name = "age",
                                @class = "form-control"
                            })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-10 profile-edit-input">
                                    @Html.DropDownListFor(m => m.Gender, new SelectList(new[]
                               {
                                    "Male",
                                    "Female",
                               }), new { @class = "form-control" })
                            </div>
                            <div class="col-lg-2">
                                <fieldset>
                                    <button type="submit" href="@Url.Action("UserProfile", "Home")" id="form-submit" class="main-dark-button"><i class="fa fa-paper-plane"></i></button>
                                </fieldset>
                            </div>
                        </div>
