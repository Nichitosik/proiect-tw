@using System.Web.Optimization;
@{
    ViewBag.Title = "MyOrders";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var orders = ViewBag.Orders;
}

<!-- ***** Main Banner Area Start ***** -->
<div class="page-heading" id="top">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="inner-content">
                    <h2>My Orders</h2>
                    <span>Awesome &amp; Creative HTML CSS layout by TemplateMo</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ***** Main Banner Area End ***** -->
<section class="section" id="product">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                @foreach (var order in orders)
                {
                    <div class="right-content-single-product">
                        <h4 class="margin-single-product">Order No. @order.Id</h4>

                        <div class="row justify-content-center">
                            @for (int i = 0; i < order.Products.Count; i++)
                            {
                                <div class="col-lg-2">
                                    <ul>
                                        <li><img src="/assets/ProductsImages/@order.Products[i].ImagesPath[0]" class="single-product-down-images" alt=""></li>
                                        <li><span class="margin-single-product">#1. @(order.Products[i].Title) $ @(order.Products[i].Price)</span></li>
                                    </ul>
                                </div>
                            }
                        </div>
                        <div class="quantity-content">
                            <div class="form-group row align-items-center d-flex">
                                <div class="col-6">
                                    <h6 class="margin-single-product">Name and Surname: </h6>
                                </div>
                                <div class="col-5">
                                    <h6 class="margin-single-product">@order.NameSurname</h6>
                                </div>
                            </div>
                            <div class="form-group row align-items-center d-flex">
                                <div class="col-6">
                                    <h6 class="margin-single-product">Email: </h6>
                                </div>
                                <div class="col-5">
                                    <h6 class="margin-single-product">@order.Email</h6>
                                </div>
                            </div>
                            <div class="form-group row align-items-center d-flex">
                                <div class="col-6">
                                    <h6 class="margin-single-product">Phone Number: </h6>
                                </div>
                                <div class="col-5">
                                    <h6 class="margin-single-product">@order.PhoneNumber</h6>
                                </div>
                            </div>
                            <div class="form-group row align-items-center d-flex">
                                <div class="col-6">
                                    <h6 class="margin-single-product">City: </h6>
                                </div>
                                <div class="col-5">
                                    <h6 class="margin-single-product">@order.City</h6>
                                </div>
                            </div>
                            <div class="form-group row align-items-center d-flex">
                                <div class="col-6">
                                    <h6 class="margin-single-product">Street: </h6>
                                </div>
                                <div class="col-5">
                                    <h6 class="margin-single-product">@order.Street</h6>
                                </div>
                            </div>
                            <div class="form-group row align-items-center d-flex">
                                <div class="col-6">
                                    <h6 class="margin-single-product">Building: </h6>
                                </div>
                                <div class="col-5">
                                    <h6 class="margin-single-product">@order.Building</h6>
                                </div>
                            </div>
                            <div class="form-group row align-items-center d-flex">
                                <div class="col-6">
                                    <h6 class="margin-single-product">Appartment: </h6>
                                </div>
                                <div class="col-5">
                                    <h6 class="margin-single-product">@order.Appartment</h6>
                                </div>
                            </div>
                            <div class="form-group row align-items-center d-flex">
                                <div class="col-6">
                                    <h6 class="margin-single-product">Postal Code: </h6>
                                </div>
                                <div class="col-5">
                                    <h6 class="margin-single-product">@order.PostalCode</h6>
                                </div>
                            </div>
                            <div class="form-group row align-items-center d-flex">
                                <div class="col-6">
                                    <h6 class="margin-single-product">Payment Method: </h6>
                                </div>
                                <div class="col-5">
                                    <h6 class="margin-single-product">@order.PaymentMethod</h6>
                                </div>
                            </div>
                        </div>
                        <div class="total row align-items-center">
                            <div class="col-6">
                                <h4 class="margin-single-product">Total Price: $@order.TotalPrice</h4>
                            </div>
                        </div>
                        


                    </div>
                   }
                </div>
        </div>
    </div>
</section>

